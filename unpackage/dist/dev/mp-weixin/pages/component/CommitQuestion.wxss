.warpper {
  position: relative;
  height: 100%;
  overflow: hidden;
  background-color: #f0f0f0;
}
.warpper .uni-card .imgContent {
  padding: 16rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.warpper .uni-card .imgContent .img {
  width: 160rpx;
  height: 160rpx;
  padding-right: 16rpx;
}
.warpper .uni-card .accept {
  border-top: 1px solid #c8c7cc;
  width: 100%;
  height: 50rpx;
  padding-top: 12rpx;
  position: relative;
}
.warpper .uni-card .accept button {
  width: 160rpx;
  height: 60rpx;
  right: 0;
  position: absolute;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 30rpx;
  background-color: #2ed573;
  color: #fff;
}
.warpper .uni-card .accept button:active {
  background-color: #7bed9f;
}
.warpper .sub {
  position: fixed;
  background-color: #1e90ff;
  z-index: 9;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #fff;
  right: 60rpx;
  bottom: 160rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size: 30rpx;
}
.warpper .sub:active {
  background-color: #70a1ff;
}

