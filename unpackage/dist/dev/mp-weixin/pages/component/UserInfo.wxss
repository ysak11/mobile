page {
  height: 100%;
}
.warpper {
  position: relative;
  height: 100%;
  background-color: #f0f0f0;
  overflow: hidden;
}
.warpper .header {
  width: calc(100vw - 24px);
  height: 200rpx;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-radius: 8px;
  margin: 12px;
}
.warpper .header .img-warp {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  position: relative;
}
.warpper .header .img-warp ._img {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.warpper .header .header-text {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  color: #34495e;
  font-weight: bold;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.warpper .header .header-text .status {
  font-size: 18rpx;
  padding-top: 30rpx;
}
.warpper .detail {
  width: calc(100vw - 24px);
  background-color: #fff;
  border-radius: 8px;
  margin: 24px 12px;
  height: 220rpx;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.warpper .detail .text {
  margin: 8px;
  font-size: 16rpx;
  font-weight: bold;
}
.warpper .detail .finished {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.warpper .detail .finished .item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
